@model KiemTraWeb.Models.SinhVien

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<h1>Xóa sinh viên</h1>

<h3>Bạn có chắc chắn muốn xóa sinh viên này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaSV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NganhHoc.TenNganh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NganhHoc.TenNganh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hinh)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <img src="@Url.Content("~/images/" + Model.Hinh)" alt="@Model.HoTen" width="1500" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaSV" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

