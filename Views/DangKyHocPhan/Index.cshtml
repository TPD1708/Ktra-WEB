@model IEnumerable<KiemTraWeb.Models.HocPhan>

@{
    ViewData["Title"] = "Đăng ký học phần";
}

<div class="container mt-4">
    <h2>Danh sách học phần</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Mã HP</th>
                <th>Tên học phần</th>
                <th>Số tín chỉ</th>
                <th>Số lượng còn lại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaHP</td>
                    <td>@item.TenHP</td>
                    <td>@item.SoTinChi</td>
                    <td>@item.SoLuongDuKien</td>
                    <td>
                        @if (item.SoLuongDuKien > 0)
                        {
                            <form asp-action="DangKy" method="post">
                                <input type="hidden" name="maHP" value="@item.MaHP" />
                                <button type="submit" class="btn btn-primary btn-sm">Đăng ký</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-danger">Hết chỗ</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="GioHang" class="btn btn-info">Xem giỏ đăng ký</a>
    </div>
</div>

